

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:"form-signin" }) do |f| %>
  <%= f.error_notification %>
<h2 class="text-center">Change your password</h2>
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  
    <%= f.input :password, label: "New password", required: true, autofocus: true,label:false,placeholder:"New Password", class:"form-control" %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true,label:false,placeholder:"Confirm your new password", class:"form-control" %>



    <%= f.button :submit, "Change my password",class:"btn btn-primary" %>
  
<% end %>

<%= render "devise/shared/links" %>
